@model ASP.NET_Projekt_Wypozyczalnia.Models.RentalItems

@{
    ViewData["Title"] = "Usuń Wypożyczenie";
}

<h2>@ViewData["Title"]</h2>

<h4>Czy na pewno chcesz usunąć to wypożyczenie?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Klient</dt>
        <dd class="col-sm-10">@Model.Client.FirstName</dd>

        <dt class="col-sm-2">Samochód</dt>
        <dd class="col-sm-10">@Model.Car.Make</dd>

        <dt class="col-sm-2">Data Wypożyczenia</dt>
        <dd class="col-sm-10">@Model.RentalDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.RentalStatus</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="RentalID" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
