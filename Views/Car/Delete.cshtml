@model ASP.NET_Projekt_Wypozyczalnia.Models.Car

@{
    ViewData["Title"] = "Usuń Samochód";
}

<h2>@ViewData["Title"]</h2>

<h4>Czy na pewno chcesz usunąć ten samochód?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Marka</dt>
        <dd class="col-sm-10">@Model.Make</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Rejestracja</dt>
        <dd class="col-sm-10">@Model.RegistrationNumber</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.CarStatus</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CarID" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
