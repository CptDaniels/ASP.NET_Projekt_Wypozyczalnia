@model ASP.NET_Projekt_Wypozyczalnia.Models.Client

@{
    ViewData["Title"] = "Edytuj klienta";
}

<h1>Edytuj dane klienta</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="ClientID" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Reszta identycznie jak w Create, oprócz pola Email (readonly) -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Wróć</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
