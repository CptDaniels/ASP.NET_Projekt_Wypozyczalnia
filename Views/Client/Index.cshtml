@model ASP.NET_Projekt_Wypozyczalnia.ViewModels.ClientListViewModel

<h1>Lista Klientów</h1>

<p>
    <a asp-action="Create">Dodaj nowego klienta</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Clients.First().FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Clients.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.Clients.First().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Clients.First().DocumentInfo)</th>
            <th>@Html.DisplayNameFor(model => model.Clients.First().Address)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.DocumentInfo</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientID">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientID">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClientID">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize"
       class="@(Model.PageNumber <= 1 ? "disabled" : "")">Poprzednia</a>

    <span>Strona @Model.PageNumber z @Model.TotalPages</span>

    <a asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize"
       class="@(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">Następna</a>
</div>
