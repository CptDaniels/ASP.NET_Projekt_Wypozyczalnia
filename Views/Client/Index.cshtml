@model ASP.NET_Projekt_Wypozyczalnia.ViewModels.ClientListViewModel

@{
    ViewData["Title"] = "Lista klientów";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista klientów</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Dodaj klienta</a>
</p>

<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Imię i nazwisko</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Dokument</th>
            <th>Adres</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.DocumentInfo</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientID" class="btn btn-sm btn-primary">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.ClientID" class="btn btn-sm btn-info text-white">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.ClientID" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Poprzednia</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Strona @Model.PageNumber z @Model.TotalPages</span>
        </li>
        <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Następna</a>
        </li>
    </ul>
</nav>
