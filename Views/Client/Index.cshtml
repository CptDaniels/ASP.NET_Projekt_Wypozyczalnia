@model IEnumerable<ASP.NET_Projekt_Wypozyczalnia.ViewModels.ClientViewModel>

<h1>Lista Klientów</h1>

<p>
    <a asp-action="Create">Dodaj nowego klienta</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Imię i Nazwisko</th>
            <th>E-mail</th>
            <th>Telefon</th>
            <th>Dokument</th>
            <th>Adres</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.DocumentInfo</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientID">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientID">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClientID">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    int pageNumber = ViewBag.PageNumber != null ? Convert.ToInt32(ViewBag.PageNumber) : 1;
    int pageSize = ViewBag.PageSize != null ? Convert.ToInt32(ViewBag.PageSize) : 10;
}

<div class="pagination">
    <a asp-action="Index" asp-route-pageNumber="@(pageNumber - 1)" asp-route-pageSize="@pageSize" class="@(pageNumber <= 1 ? "disabled" : "")">Poprzednia</a>
    <span>Strona @pageNumber</span>
    <a asp-action="Index" asp-route-pageNumber="@(pageNumber + 1)" asp-route-pageSize="@pageSize">Następna</a>
</div>
